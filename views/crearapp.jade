extends layout

block content
    h1#h1App CREAR APLICACIÓN

    .container
        form#crearapp(action='/guardarapp', method='post')
            div.errores
            .form-group
                label(for='nombre') Nombre
                input#nombre.form-control.required(type='text', name='nombre', placeholder='Nombre')

            .form-group
                label(for='descripcion') Descripción
                textarea#descripcion.form-control.required(placeholder='Descripción', name='descripcion', rows='3')

            button.btn.btn-primary.guardar.guardarapp(style='margin-bottom: 10px', type='submit') Guardar

        form(action='/')
            button.btn.btn-default(type='submit') Cancelar

